#!/usr/bin/env bash

set -euf -o pipefail

function usage {
  cat <<EOF
Search for a regular expression in all bookmarks.

Usage:
  $0 <regexp>

Examples:
  $0 stacks
EOF
}

cd ~/bookmarks
find . -type f -exec make '{}' \+ &>/dev/null
find . -type f -name "*$1*.pdf"
rg --no-heading --line-number --with-filename --color=always -- "$1" .
