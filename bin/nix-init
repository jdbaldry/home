#!/usr/bin/env bash

set -euf -o pipefail

readonly REPO="${1/\/}"

function nix_init() {
  # Initialize and configure niv for dependency pinning.
  niv init
  niv update nixpkgs -b nixos-20.03

  # Initialize lorri for cached shell.nix.
  lorri init

  cat <<EOF > shell.nix
let
  sources = import ./nix/sources.nix;
  pkgs = import sources.nixpkgs { };
in
  pkgs.mkShell {
    buildInputs = [
      pkgs.hello
    ];
  }
EOF
}

mkdir ~/nix/"${REPO}"
pushd ~/nix/"${REPO}"
  nix_init
popd
ln -s ~/nix/"${REPO}"/nix "${REPO}"/nix
ln -s ~/nix/"${REPO}"/shell.nix "${REPO}"/shell.nix
ln -s ~/nix/"${REPO}"/.envrc "${REPO}"/nix/.envrc
